<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/font_gray"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/japart_add_class_cla"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="@dimen/java_part_add"
            android:text="所属类:" />
        <EditText
            android:id="@+id/javapart_add_class_inp"
            android:layout_toRightOf="@id/japart_add_class_cla"
            android:layout_alignBaseline="@id/japart_add_class_cla"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
     <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" >
        <TextView
            android:id="@+id/japart_add_method_cla"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="@dimen/java_part_add"
            android:text="方    法:" />
        <EditText
            android:id="@+id/javapart_add_method_inp"
            android:layout_toRightOf="@id/japart_add_method_cla"
            android:layout_alignBaseline="@id/japart_add_method_cla"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" >
        <TextView
            android:id="@+id/japart_add_descri_cla"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="@dimen/java_part_add"
            android:text="使用说明:" />
        <EditText
            android:id="@+id/javapart_add_method_inp"
            android:layout_toRightOf="@id/japart_add_descri_cla"
            android:layout_alignBaseline="@id/japart_add_descri_cla"
            android:minHeight="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        >
        <Button 
            android:layout_width="wrap_content"
            android:text="取消"
            android:layout_height="wrap_content"
            android:id="@+id/javapart_add_cancel"/>
        <Button 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/javapart_add_complete"
            android:layout_toRightOf="@id/javapart_add_cancel"
            android:layout_marginLeft="40dp"
            android:text="完成"/>
    </RelativeLayout>
</LinearLayout>