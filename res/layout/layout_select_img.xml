<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >


    <ImageView
        android:id="@+id/decode_imgview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        />
    

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:id="@+id/takephoto_diago"
        android:visibility="gone"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/getfromphoto"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:background="@drawable/select_takephoto"
            android:text="从相册里获取" 
             android:padding="10dp"
            android:gravity="center_horizontal"/>
        <TextView 
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:id="@+id/getfrom_takephoto"
            android:text="拍照"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
             android:padding="10dp"
            android:layout_below="@id/getfromphoto"
            android:background="@drawable/select_takephoto"/>
        <TextView 
            android:id="@+id/getphoto_cancel"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="取消"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/getfrom_takephoto"
            android:background="@drawable/select_takephoto"
            android:layout_marginTop="20dp"/>
    </RelativeLayout>

</LinearLayout>