<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <!-- 学校首页的ViewPagerIndicator的样式设置，主要是指示器的背景颜色等 -->
<style name="schol_home" parent="AppBaseTheme">
    <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
</style>
  <!-- ViewPagerIndicator的样式 -->
     <style name="CustomTabPageIndicator" parent="Widget.TabPageIndicator">
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:fadingEdgeLength">8dp</item>
        <item name="android:background">@color/coral</item>
        <item name="android:textColor">@drawable/select_viewindicator_titlefont</item>
        <item name="android:textSize">16dp</item>
        
    </style>
</resources>